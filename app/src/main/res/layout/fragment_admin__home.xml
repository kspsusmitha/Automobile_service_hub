<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_bg"
    tools:context=".admin_Home_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_purchaseHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bluegreen"
            android:text="purchase history"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_BookedService"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bluegreen"
            android:text="booked service"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btn_viewFeedback"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/bluegreen"
            android:text="view feedback"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

</FrameLayout>